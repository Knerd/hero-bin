#!/bin/bash
TRASH="/home/$USER/.local/share/Trash/"

TEST

ASCII=(
  "        ,--! " 
  "     __/   * "
  "   ,d08b.    "
  "   0088MM    "
  "   '9MMP'    "
)

TEXT=(
  ""
  "â•”â•¦â•—â•”â•â•—â•”â•â•—â•¦â•”â•â•—  â”Œâ” â”Œâ”€â”â”Œâ”¬â”â”Œâ” "
  "â•‘â•‘â•‘â• â•â•£â•‘ â•¦â•‘â•‘    â”œâ”´â”â”‚ â”‚â”‚â”‚â”‚â”œâ”´â”"
  "â•© â•©â•© â•©â•šâ•â•â•©â•šâ•â•  â””â”€â”˜â””â”€â”˜â”´ â”´â””â”€â”˜"
  ""
)

showSplash(){
  ART=(
    "\n${ASCII[0]} ${TEXT[0]}"
    "\n${ASCII[1]} ${TEXT[1]}"
    "\n${ASCII[2]} ${TEXT[2]}"
    "\n${ASCII[3]} ${TEXT[3]}"
    "\n${ASCII[4]} ${TEXT[4]}"
  )
  echo -e "${ART[@]}"
}

bombTrash(){
  echo ğŸ’£ Bombing the Trash...; 
  echo "ğŸ’£ 3..."
  sleep 0.85 
  echo "ğŸ’£ 2.."
  sleep 0.85 
  echo "ğŸ’£ 1!"
  sleep 0.85 
  echo "ğŸ’¥ BOOM!"
  rm -rfi ${TRASH}*;
}

moveToTrash(){
  FILE="$1"
  if [ -f "$FILE" ]; then
    mv "$FILE" "${TRASH}${FILE}"
    echo "ğŸ’¥ BOOM!"
  else
    bombIsADud
  fi
}

listTrash(){
  ls -l ${TRASH}*; 
}

bombIsADud(){
  sleep 1
  echo "ğŸ’£ ... its a dud (file not found)"; 
  sleep 1 
}

bomb(){
  echo "ğŸ’£ $USER takes out a bomb..."; 
  case $1 in
    "i")
      echo ğŸ’£ Inspecting...; 
      listTrash
      ;;

    "file")
      echo "ğŸ’£ $USER bombed $FILE to the trash..."; 
      moveToTrash "$2"
      ;;

    "--help")
      sleep 1
      echo "ğŸ’£ Wait, $USER thinks it'd be a good idea to read the instructions before playing with explosives."; 
      sleep 2
      echo "ğŸ’£ $USER opened the bomb manual and begins reading..."
      sleep 2 

      echo "ğŸ’£ $ bomb/b[+,-,?] [FILE]
      b       : Execute main exlosive. Targets trash.
      b+ FILE : Move FILE to trash
      b-      : List what's in the trash
      b?      : Open bomb manual
      "
      sleep 7 
      echo "ğŸ‘• $USER: Good to Know."
      # moveToTrash "$2"
      ;;

    *)
      showSplash
      bombTrash
      ;;
  esac
}

bomb $@