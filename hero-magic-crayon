#!/bin/bash

PAD="/home/$USER/hero-magic-crayon"

removeLastCrayonMark(){
  sed -i '$d' $PAD
}

crayonMark(){
  if [ "$1" != "" ]; then
    touch "$PAD"
    echo "$@" >> "$PAD"
    echo "ï¸ï¸$USER Wrote: ğŸ–ï¸ $@!"
  fi
}

magicCrayon(){
  echo "ğŸ–ï¸ MAGIC CRAYON @ï¸ ${PAD}"

  case $1 in
    "-d") removeLastCrayonMark ;;
    *) crayonMark $@ ;;
  esac


  cat "$PAD"
}

magicCrayon $@