#!/bin/bash

PAD="/home/$USER/hero-magic-crayon"

ASCII=(
  "  ________________________________________     "
  " /\______________________________________/\`-.  "
  "<()>N___________________________________<    ##"
  " \/______________________________________\,-'  "
)

TEXT=(
  ""
  "â•”â•¦â•—â•”â•â•—â•”â•â•—â•¦â•”â•â•—  â”Œâ”¬â”â”Œâ”€â”â”¬â”€â”â”¬â”Œâ”€â”Œâ”€â”â”¬â”€â”"
  "â•‘â•‘â•‘â• â•â•£â•‘ â•¦â•‘â•‘    â”‚â”‚â”‚â”œâ”€â”¤â”œâ”¬â”˜â”œâ”´â”â”œâ”¤ â”œâ”¬â”˜"
  "â•© â•©â•© â•©â•šâ•â•â•©â•šâ•â•  â”´ â”´â”´ â”´â”´â””â”€â”´ â”´â””â”€â”˜â”´â””â”€"
)

showSplash(){
  ART=(
    "\n${ASCII[1]} ${TEXT[1]}"
    "\n${ASCII[2]} ${TEXT[2]}"
    "\n${ASCII[3]} ${TEXT[3]}"
    "\n${ASCII[4]} ${TEXT[4]}"
  )
  echo -e "${ART[@]}"
}

removeLastMark(){
  sed -i '$d' $PAD
}

saveMark(){
  if [ "$1" != "" ]; then
    touch "$PAD"
    echo "$@" >> "$PAD"
    echo "ï¸ï¸ğŸ‘• $USER Wrote: ğŸ–ï¸ $@!"
    export HEY_LISTEN="Use n- to remove last mark."
  fi
}

magicMarker(){
  echo "ğŸ–ï¸ MAGIC MARKER @ï¸ ${PAD}"

  case $1 in
    "-d") removeLastMark ;;
    *) saveMark $@ ;;
  esac


  cat "$PAD"

}

showSplash
magicMarker $@